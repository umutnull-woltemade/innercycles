{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Flutter: Clean",
      "type": "shell",
      "command": "flutter clean",
      "problemMatcher": []
    },
    {
      "label": "Flutter: Pub Get",
      "type": "shell",
      "command": "flutter pub get",
      "problemMatcher": []
    },
    {
      "label": "Flutter: Build Runner",
      "type": "shell",
      "command": "flutter pub run build_runner build --delete-conflicting-outputs",
      "problemMatcher": []
    },
    {
      "label": "Flutter: Build Runner (Watch)",
      "type": "shell",
      "command": "flutter pub run build_runner watch --delete-conflicting-outputs",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Flutter: Analyze",
      "type": "shell",
      "command": "flutter analyze",
      "problemMatcher": []
    },
    {
      "label": "Flutter: Test",
      "type": "shell",
      "command": "flutter test",
      "problemMatcher": []
    },
    {
      "label": "Flutter: Build APK",
      "type": "shell",
      "command": "flutter build apk --release",
      "problemMatcher": []
    },
    {
      "label": "Flutter: Build iOS",
      "type": "shell",
      "command": "flutter build ios --release",
      "problemMatcher": []
    },
    {
      "label": "agent:i18n",
      "type": "shell",
      "command": "./.vscode/scripts/run-with-retry.sh",
      "args": [
        "flutter test test/l10n/language_purity_test.dart",
        "3",
        "300"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": true
      },
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "agent:snapshot",
      "type": "shell",
      "command": "./.vscode/scripts/run-with-retry.sh",
      "args": [
        "flutter test test/critical_ui/critical_ui_regression_test.dart",
        "3",
        "600"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": true
      },
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "agent:chaos",
      "type": "shell",
      "command": "./.vscode/scripts/run-with-retry.sh",
      "args": [
        "flutter test test/critical_ui/chaos_testing.dart",
        "2",
        "600"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": true
      },
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "agent:appstore",
      "type": "shell",
      "command": "./.vscode/scripts/run-with-retry.sh",
      "args": [
        "./auto_deploy.sh",
        "1",
        "900"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": true
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "agents:run-all",
      "dependsOn": [
        "agent:i18n",
        "agent:snapshot",
        "agent:chaos",
        "agent:appstore"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "agents:tmux-launch",
      "type": "shell",
      "command": "./.vscode/scripts/tmux-agents.sh",
      "args": [
        "${workspaceFolder}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "agents:tmux-attach",
      "type": "shell",
      "command": "tmux attach-session -t agents 2>/dev/null || echo 'No agents session running. Use agents:tmux-launch first.'",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "agents:tmux-kill",
      "type": "shell",
      "command": "tmux kill-session -t agents 2>/dev/null && echo 'Session killed.' || echo 'No agents session to kill.'",
      "problemMatcher": []
    }
  ]
}
