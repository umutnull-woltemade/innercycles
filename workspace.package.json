{
  "name": "lumera-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:site": "turbo run build --filter=lumera-site",
    "build:app": "cd apps/lumera-app && flutter build web --release",
    "dev": "turbo run dev",
    "dev:site": "turbo run dev --filter=lumera-site",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "safety:check": "./scripts/safety-check.sh",
    "safety:check:site": "./scripts/safety-check.sh apps/lumera-site",
    "safety:check:app": "./scripts/safety-check.sh apps/lumera-app",
    "i18n:guard": "./scripts/i18n-guard.sh",
    "content:generate": "node scripts/generate-reflections.js",
    "content:generate:en": "node scripts/generate-reflections.js --language=en --count=10",
    "content:generate:tr": "node scripts/generate-reflections.js --language=tr --count=10",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "husky": "^9.0.0",
    "prettier": "^3.2.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "npm@10.0.0"
}
