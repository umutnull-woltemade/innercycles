default_platform(:ios)

platform :ios do
  desc "Sync code signing certificates via Match"
  lane :sync_certs do
    setup_keychain
    match(
      type: "appstore",
      readonly: true,
      keychain_name: "fastlane_keychain",
      keychain_password: ENV["KEYCHAIN_PASSWORD"],
      app_identifier: ENV["IOS_BUNDLE_ID"] || "com.venusone.innercycles",
    )
  end

  desc "Build and upload to TestFlight"
  lane :beta do |options|
    version   = options[:version]      || "1.0.0"
    build_num = options[:build_number] || "1"
    changelog = options[:changelog]    || "Bug fixes and improvements."

    # Create temporary keychain for CI
    setup_keychain

    # Sync certificates via match
    match(
      type: "appstore",
      readonly: true,
      git_url: ENV["MATCH_GIT_URL"],
      keychain_name: "fastlane_keychain",
      keychain_password: ENV["KEYCHAIN_PASSWORD"],
      app_identifier: ENV["IOS_BUNDLE_ID"] || "com.venusone.innercycles",
    )

    # Upload to TestFlight via App Store Connect API
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_filepath: "fastlane/AuthKey.p8",
      in_house: false,
    )

    upload_to_testflight(
      api_key: api_key,
      ipa: "../build/ios/ipa/innercycles.ipa",
      skip_waiting_for_build_processing: true,
      changelog: changelog,
      distribute_external: false,
    )

    UI.success("Uploaded v#{version}+#{build_num} to TestFlight")

    # Cleanup keychain
    delete_keychain(name: "fastlane_keychain")
  end

  desc "Upload metadata only to App Store Connect (no binary)"
  lane :upload_metadata do
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_filepath: "fastlane/AuthKey.p8",
      in_house: false,
    )

    deliver(
      api_key: api_key,
      skip_binary_upload: true,
      skip_screenshots: true,
      skip_metadata: false,
      submit_for_review: false,
      automatic_release: false,
      force: true,
      metadata_path: "fastlane/metadata",
      app_identifier: ENV["IOS_BUNDLE_ID"] || "com.venusone.innercycles",
      primary_category: "Lifestyle",
      secondary_category: "Health & Fitness",
      primary_first_sub_category: "Self-Improvement",
      primary_second_sub_category: "Journals & Diaries",
      privacy_url: "https://umutnull-woltemade.github.io/innercycles/privacy.html",
      support_url: "https://umutnull-woltemade.github.io/innercycles/support.html",
      marketing_url: "https://umutnull-woltemade.github.io/innercycles/",
    )

    UI.success("Metadata uploaded to App Store Connect")
  end

  desc "Promote TestFlight build to App Store with metadata"
  lane :release do |options|
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_filepath: "fastlane/AuthKey.p8",
      in_house: false,
    )

    deliver(
      api_key: api_key,
      skip_binary_upload: true,
      skip_screenshots: true,
      skip_metadata: false,
      submit_for_review: false,
      automatic_release: false,
      force: true,
      metadata_path: "fastlane/metadata",
      app_identifier: ENV["IOS_BUNDLE_ID"] || "com.venusone.innercycles",
      primary_category: "Lifestyle",
      secondary_category: "Health & Fitness",
      primary_first_sub_category: "Self-Improvement",
      primary_second_sub_category: "Journals & Diaries",
      privacy_url: "https://umutnull-woltemade.github.io/innercycles/privacy.html",
      support_url: "https://umutnull-woltemade.github.io/innercycles/support.html",
      marketing_url: "https://umutnull-woltemade.github.io/innercycles/",
    )
  end

  desc "Full pipeline: build + TestFlight + metadata upload"
  lane :ship do |options|
    version   = options[:version]      || "1.0.0"
    build_num = options[:build_number] || "1"
    changelog = options[:changelog]    || "Bug fixes and improvements."

    beta(
      version: version,
      build_number: build_num,
      changelog: changelog,
    )

    upload_metadata

    UI.success("v#{version}+#{build_num} shipped to TestFlight with metadata!")
  end

  # ---- Helpers ----

  private_lane :setup_keychain do
    create_keychain(
      name: "fastlane_keychain",
      password: ENV["KEYCHAIN_PASSWORD"],
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: false,
    )
  end
end
