# Astrobobo Environment Configuration
# Copy to .env.local and fill in values

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/astrobobo

# Site
NEXT_PUBLIC_SITE_URL=https://astrobobo.com

# Content Revalidation
CONTENT_REVALIDATE_SECRET=your-secret-here

# LLM (Content Generation)
OLLAMA_HOST=http://localhost:11434
CLAUDE_API_KEY=sk-ant-xxxx

# Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel (set in Vercel dashboard)
# VERCEL_URL is auto-set by Vercel
